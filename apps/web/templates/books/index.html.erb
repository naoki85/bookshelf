<h2>All books</h2>

<%= link_to 'New book', routes.new_book_path, class: 'waves-effect waves-light btn' %>

<% if books.any? %>
  <ul id="books" class="collection">
    <% books.each do |book| %>
      <li class="book collection-item">
        <h3><%= book.title %></h3>
        <p><%= book.author %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="placeholder">There are no books yet.</p>
<% end %>